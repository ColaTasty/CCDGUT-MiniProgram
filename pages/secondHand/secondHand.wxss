@keyframes title-show {
    from {
        transform: scaleX(0);
    }
    to {
        transform: scaleX(1);
    }
}

.title-show {
    animation: title-show 1500ms;
}

@keyframes logo-show {
    from {
        transform: scale(0, 0);
    }
    to {
        transform: scale(1, 1);
    }
}

.logo-show {
    animation: logo-show 1500ms;
}


