/* pages/ILOVEU/write/sending.wxss */

.hover {
    opacity: 0.5;
}

.bg-image {
    width: 100%;
    height: 800px;
    position: fixed;
    z-index: -1;
}

/***********************************************content*******************************************/

#content{
    width: 100%;
    height: 300px;
    margin-top: 50px;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    background-color: #fff;
    position: relative;
}

#content #pattern{
    width: 100px;
    height: 100px;
    margin: 0 auto;
    margin-top: 50px;
    display: block;
    /* border: 1px solid blue; */
}

#content .tip{
    width: 100%;
    height: 30px;
    text-align: center;
    padding-top: 5px;
    box-sizing: border-box;
    /* border: 1px solid blue; */
}

#content #bottom{
    width: 100%;
    height: 100px;
    position: absolute;
    bottom: 0px;
    /* border: 1px solid blue; */
}

#content #bottom .item{
    width: 40%;
    height: auto;
    display: block;
    margin: 0 auto;
    margin-top: 20px;
    /* border: 1px solid red; */
}

/*******************************************copyright************************************/

#copyright {
    width: 100%;
    height: 50px;
    margin: 0 auto;
    position: absolute;
    bottom: 0px;
    z-index: -1;
}

#copyright text {
    width: 100%;
    height: 30px;
    text-align: center;
    display: inline-block;
    font-weight: bold;
}