/* pages/calendar/share/share.wxss */
@keyframes show{
  from{
    opacity: 0;
  }
  to{
    opacity: 1;
  }
}
.page{
  background-color: #eee;
}

#top-box {
  padding-top: 10px;
  padding-left: 8px;
  margin-bottom: 15px;
  text-align: left;
}

#top-box .title {
  font-size: 24px;
  font-family: "黑体";
}

#avatar-box {
  width: 80px;
  height: 80px;
  margin: 0 auto;
}

#avatar-box image {
  width: inherit;
  height: inherit;
  border-radius: 80px;
  margin: 0 auto;
  background-repeat: no-repeat;
  border: 1px solid #ccc;
}

#message-box {
  padding: 10px 0 5px 0;
  margin: 10px 0;
  text-align: center;
}

#message-box text {
  font-weight: 500;
  margin: 5px 0;
  padding: 0;
}

.big {
  font-size: 24px;
}

.middle {
  font-size: 18px;
}

.small {
  font-size: 12px;
}

.small-middle {
  font-size: 14px;
}

.bold {
  font-weight: bold;
}

.bolder {
  font-weight: bolder;
}

.border-bottom {
  border-bottom: 1px solid #ccc;
}

#content-box{
  padding-top: 20px;
  box-sizing: border-box;
  height: 250px;
}

#button-box{
  display: flex;
  flex-direction: column;
  align-items: center
}

#button-box #button,
#button-box button{
  padding-top: 7px;
  border-radius: 10px;
  width: 200px;
  height: 40px;
  text-align: center;
  font-size: 18px;
  margin: 2px 0;
}
#button-box .defualt{
  border: 1px solid #555;
}

#button-box .primary{
  background-color: rgb(3, 194, 3);
  color: white;
}

#copyright-box{
  text-align: center;
  font-size: 14px;
  position: relative;
  bottom: 0px;
}

.button-hover{
  opacity: 0.5;
}