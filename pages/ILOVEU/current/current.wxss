/* pages/ILOVEU/current/current.wxss */

@keyframes content-show{
    from{
        transform: translateY(-100%);
    }
    to{
        transform: translateY(1%);
    }
}

@keyframes left-show{
    from{
        transform: translateX(-100%);
    }
    to{
        transform: translateX(1%);
    }
}

@keyframes right-show{
    from{
        transform: translateX(100%);
    }
    to{
        transform: translateX(1%);
    }
}

.content-show{
    animation: content-show 1s;
}

.left-show{
    animation: left-show 1s;
}

.right-show{
    animation: right-show 1s;
}

.hover{
    opacity: 0.5;
}

.bg-image{
    width: 100%;
    height: 800px;
    position: fixed;
    z-index: -1;
}

/*******************************************content**************************************/

#content{
    width: 88%;
    height: auto;
    min-height: 400px;
    margin: 0 auto;
    margin-top: 20px;
    padding-top: 10px;
    padding-bottom: 40px;
    border-radius: 10px;
    background-color: #fff;
    position: relative;
    /* border: 1px solid blue; */
}

#content .context{
    width: inherit;
    height: auto;
    margin: 0 auto;
    /* border: 1px solid red; */
}

#content .context text{
    word-wrap: break-word;
}

#content .signature{
    width: 100%;
    height: 30px;
    text-align: right;
    position: absolute;
    bottom: 0px;
    padding-right: 5px;
    font-size: 14px;
    color: #ccc;
    /* border: 1px solid red ; */
}

/******************************************bottom****************************************/

#bottom{
    width: 100%;
    height: auto;
    /* border: 1px solid blue; */
}

#bottom .buttons{
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    /* border: 1px solid red; */
}
#bottom .buttons #button{
    width: 40%;
    height: 30px;
    font-size: 20px;
    margin: 0 auto;
    text-align: center;
    border-radius: 10px;
    /* border: 1px solid red; */
}

.red-font{
    background-color: rgb(240, 116, 116);
    color: #eee;
}

.gray-font{
    background-color: #eee;
    border: 1px solid #777777;
    color: #353535;
}

/*******************************************copyright************************************/

#copyright{
    width: 100%;
    height: 50px;
    margin: 0 auto;
    position: absolute;
    bottom: 0px;
}

#copyright text{
    width: 100%;
    height: 30px;
    text-align: center;
    display: inline-block;
    font-weight: bold;
}